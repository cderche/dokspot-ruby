.row.xs-margin-top
  .col-xs-12.col-sm-8.col-md-6.col-lg-4.col-sm-offset-2.col-md-offset-3.col-lg-offset-4
  
    .panel.panel-default

      .panel-heading
        %h1.panel-title= t 'devise.invitations.edit.header'
          
      .panel-body
        = simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: {method: :put} do |f|
          = devise_error_messages!
        
          = f.hidden_field :invitation_token
          
          .form-group  
            = f.input :password, input_html: { class: 'form-control', autofocus: true}
        
          .form-group
            = f.input :password_confirmation, input_html: { class: 'form-control' }            
              
          .form-actions
            .text-center
              = f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-success'