= simple_form_for [@product, @notification] do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.input :content, as: :text, input_html: { class: 'form-control', autofocus: true, maxlength: 255, placeholder: "Max 255 characters." }
    .form-group  
      = f.input :category, collection: Notification.categories.map {|k, v| [k, k]}, prompt: 'Select Category', input_html: { class: 'form-control'}
    //= f.input :category, as: :select, collection: Notification.categories.to_a
    
    //= f.association :product
    //= f.input :expiration
    
    .form-group
      = f.check_box :published
      = f.label :published

  %br
  
  .form-actions
    .text-center
      = f.button :submit, class: 'btn-success'