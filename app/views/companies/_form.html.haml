= simple_form_for(@company) do |f|
  = f.error_notification

  .form-inputs
  
    .form-group
      = f.input :name, input_html: { class: 'form-control', autofocus: true } if current_user.admin?
    .form-group
      = f.input :symbol, input_html: { class: 'form-control' } if current_user.admin?
    .form-group  
      = f.input :website, input_html: { class: 'form-control' }
    .form-group
      = f.input :contact, as: :email, input_html: { class: 'form-control' }
    .form-group
      = f.input :order_email, as: :email, input_html: { class: 'form-control' }
    .form-group
      = f.input :logo, as: :file, input_html: { class: 'form-control' }
  
  %br

  .form-actions
    .text-center
      = f.button :submit, class: 'btn-success'