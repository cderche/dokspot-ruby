= simple_form_for [@company, @product] do |f|
  = f.error_notification
    
  .form-inputs
    .form-group
      = f.input :name, input_html: { class: 'form-control', autofocus: true }
      
    .form-group
      = f.association :company, input_html: { class: 'form-control' } if current_user.admin?
      
    - if current_user.admin? or current_user.manager?
      = f.check_box :published
      = f.label :published
  
  %br

  .form-actions
    .text-center
      = f.button :submit, class: 'btn-success'