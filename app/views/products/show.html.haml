= render 'breadcrumbs'

- if !user_signed_in?
  = render partial: 'notifications/display', locals: { product: @product }
  
.jumbotron
  .row
    .col-xs-8
      %h2
        =@product.name
        %br
        %small
          = @product.uuid
          %br
          = render partial: "support/published", locals: {object: @product} if user_signed_in?
            
      %h4= @product.company.name if !user_signed_in?
    .col-xs-4.text-right
      = render partial: "delete", locals: {product: @product}
      
%br

/ NAV TABS
%ul.nav.nav-tabs{role: 'tablist'}
  %li.active
    = link_to t('keywords.instructions'), '#instructions', role: 'tab', data: {toggle: 'tab'}
  - if user_signed_in?
    %li
      = link_to t('keywords.notifications'), '#notifications', role: 'tab', data: {toggle: 'tab'}
    %li
      = link_to t('keywords.resources'), '#resources', role: 'tab', data: {toggle: 'tab'}
    
/ TAB PANES
%div.tab-content
  %div.tab-pane.active#instructions
    = render partial: "instructions/index",  locals: { product: @product } if policy(Instruction.new(product: @product)).index?
  - if user_signed_in?
    %div.tab-pane#notifications
      = render partial: "notifications/index",  locals: { product: @product }
    %div.tab-pane#resources
      = render partial: "resources",  locals: { product: @product }
      

/ Call Back
- if !user_signed_in?
  .text-center
    %button.btn.btn-warning.btn-xs{data: { target: "#modalCallback", toggle: "modal" }, href: "" } Request Call Back
      
      
/ Call Back Modal
    
#modalCallback.modal.fade.pg-show-modal{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-sm
    .modal-content
      = simple_form_for(@customer, url: url_for(action: 'callback', controller: 'customers'), method: :post) do |f|
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
          %h4.modal-title.text-center Request a Call Back
        .modal-body
          = f.error_notification
        
          .form-inputs
            .form-group
              = f.input :telephone, input_html: { class: 'form-control' }, placeholder: '+41 79 216 38 28'
              = f.hidden_field :product_id, value: @product.id
              
        .modal-footer
          %button.btn.pull-right.btn-success{ type: "submit" } Submit