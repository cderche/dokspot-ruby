= simple_form_for [@product, @instruction] do |f|
  = f.error_notification

  .form-inputs  

    .form-group
      = f.association :language, collection: @languages, input_html: { autofocus: true, class: 'form-control' }, include_blank: false
      
    - if action_name == 'new' or action_name == 'create'
      = f.simple_fields_for :documents do |d|
        .form-group
          = d.input :version, input_html: { class: 'form-control', placeholder: 'e.g. 1.0' }
        %br
        .form-group
          = d.input :file, as: :file
        %br
        .form-group
          = d.input :primary, as: :hidden, input_html: { value: true }

    .form-group
      = f.check_box :published
      = f.label :published

  .form-actions
    .text-center
      = f.button :submit, class: 'btn-success'