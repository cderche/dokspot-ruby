= simple_form_for [@product, @instruction] do |f|
  = f.error_notification

  .form-inputs
    .form-group
      = f.association :language, input_html: { autofocus: true, class: 'form-control' }

    .form-group
      = f.check_box :published
      = f.label :published

  .form-actions
    .text-center
      = f.button :submit, class: 'btn-success'