{
  "name": "dokspot-ruby",
  "scripts": {
  },
  "env": {
    "ADMIN_EMAIL": {
      "required": true
    },
    "ADMIN_NAME": {
      "required": true
    },
    "ADMIN_PASSWORD": {
      "required": true
    },
    "DOMAIN_NAME": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MANDRILL_API_KEY": {
      "required": true
    },
    "MAX_THREADS": {
      "required": true
    },
    "MIN_THREADS": {
      "required": true
    },
    "MIXPANEL_PROJECT_TOKEN": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "S3_BUCKET": {
      "required": true
    },
    "S3_KEY": {
      "required": true
    },
    "S3_SECRET": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [{
    "plan": "heroku-postgresql"
  }],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "scripts": {
    "postdeploy": "bundle exec rake db:create db:seed"
  },
}
